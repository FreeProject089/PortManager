<Window x:Class="PortManager.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading PM Ultimate" Height="450" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True">
    <Border Background="#121212" CornerRadius="20" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Circular Icon -->
                <Border Width="150" Height="150" CornerRadius="75" BorderBrush="#007ACC" BorderThickness="3" Margin="0,0,0,30">
                    <Border.Background>
                        <ImageBrush ImageSource="/icon.jpg" Stretch="UniformToFill">
                            <!-- Circular Clip is handled by CornerRadius + Margin usually, but we can be explicit -->
                        </ImageBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="#007ACC" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                </Border>

                <TextBlock Text="PM ULTIMATE" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="Advanced Port &amp; System Manager" Foreground="#888" Margin="0,5,0,20" HorizontalAlignment="Center"/>
                
                <!-- Loading Animation -->
                <ProgressBar Name="Loader" Width="250" Height="4" IsIndeterminate="True" 
                             Background="#222" Foreground="#007ACC" BorderThickness="0"/>
                
                <TextBlock Name="TxtLoading" Text="Initializing system components..." Foreground="#555" FontSize="11" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Text="v1.3 Ultimate Edition" Foreground="#333" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="10"/>
        </Grid>
    </Border>
</Window>
