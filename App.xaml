<Application x:Class="PortManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PortManager"
             StartupUri="SplashWindow.xaml">
    <Application.Resources>
         <DrawingImage x:Key="RedAlertOverlay">
             <DrawingImage.Drawing>
                 <GeometryDrawing Brush="#FF5252">
                     <GeometryDrawing.Geometry>
                         <EllipseGeometry Center="50,50" RadiusX="40" RadiusY="40"/>
                     </GeometryDrawing.Geometry>
                     <GeometryDrawing.Pen>
                         <Pen Brush="White" Thickness="10"/>
                     </GeometryDrawing.Pen>
                 </GeometryDrawing>
             </DrawingImage.Drawing>
         </DrawingImage>
    </Application.Resources>
</Application>
